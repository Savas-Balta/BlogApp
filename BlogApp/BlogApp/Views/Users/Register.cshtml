@model RegisterViewModel

<div class="row">
    <div class="col-12">
        <h1>KayÄ±t Ol</h1>
        <form action="Register" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 mt-4">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control">
                <div asp-validation-for="UserName" class="text-danger"></div>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <div asp-validation-for="Name" class="text-danger"></div>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
                <div asp-validation-for="Email" class="text-danger"></div>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <div asp-validation-for="Password" class="text-danger"></div>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control">
                <div asp-validation-for="ConfirmPassword" class="text-danger"></div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>